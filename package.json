{
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "cd .. && husky install fa-frontend/.husky",
    "ncu": "turbo run ncu",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "pretty-quick": "pretty-quick --staged",
    "prettier": "prettier --write --ignore-unknown ./**/*.{ts,css,less,scss}",
    "clean": "turbo run clean && rimraf /s/d node_modules && pnpm -r exec rimraf /s/d node_modules dist .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm release:only",
    "release:only": "changeset publish --registry=https://registry.npmjs.com/"
  },
  "devDependencies": {
    "@changesets/cli": "2.25.2",
    "@fa/eslint-config-custom": "workspace:*",
    "@types/node": "18.11.16",
    "eslint": "8.30.0",
    "husky": "8.0.2",
    "prettier": "2.8.1",
    "prettier-plugin-tailwindcss": "0.2.1",
    "pretty-quick": "3.1.3",
    "rimraf": "3.0.2",
    "turbo": "latest"
  },
  "packageManager": "pnpm@7.18.2"
}
